<!DOCTYPE html>
<html>
<head>
  <title>GiftList</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container clearfix">

<%= render 'layouts/header' %>

<% flash.each do | name, message | %>
    <div id="flash_<%= name %>" >
    <%= message %>
    </div>
  <% end %>

<%= yield %>

<%= render 'layouts/footer' %>

  </div>
</body>
</html>
