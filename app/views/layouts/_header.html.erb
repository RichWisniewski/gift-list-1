<header>
  <div>
    <% if current_user %>
      Logged in as <%= current_user.name %>.
      <%= link_to 'Logout', session_path('current'), method: 'delete' %>
    <% else %>
      <%= link_to 'Register', new_user_path %>
      <%= link_to 'Log In', new_session_path %>
    <% end %>
  </div>
</header>